<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yukz.daodaoping.discount.dao.DiscountConfigDao">

	<select id="get" resultType="com.yukz.daodaoping.discount.domain.DiscountConfigDO">
		select `id`,`discount_name`,`start_time`,`end_time`,`discount_status`,`agent_id`,`gmt_create`,`gmt_modify` from ddp_discount_config where id = #{value}
	</select>

	<select id="list" resultType="com.yukz.daodaoping.discount.domain.DiscountConfigDO">
		select `id`,`discount_name`,`start_time`,`end_time`,`discount_status`,`agent_id`,`gmt_create`,`gmt_modify` from ddp_discount_config
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="discountName != null and discountName != ''"> and discount_name = #{discountName} </if>
		  		  <if test="startTime != null and startTime != ''"> and start_time = #{startTime} </if>
		  		  <if test="endTime != null and endTime != ''"> and end_time = #{endTime} </if>
		  		  <if test="discountStatus != null and discountStatus != ''"> and discount_status = #{discountStatus} </if>
		  		  <if test="agentId != null and agentId != ''"> and agent_id = #{agentId} </if>
		  		  <if test="gmtCreate != null and gmtCreate != ''"> and gmt_create = #{gmtCreate} </if>
		  		  <if test="gmtModify != null and gmtModify != ''"> and gmt_modify = #{gmtModify} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from ddp_discount_config
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="discountName != null and discountName != ''"> and discount_name = #{discountName} </if>
		  		  <if test="startTime != null and startTime != ''"> and start_time = #{startTime} </if>
		  		  <if test="endTime != null and endTime != ''"> and end_time = #{endTime} </if>
		  		  <if test="discountStatus != null and discountStatus != ''"> and discount_status = #{discountStatus} </if>
		  		  <if test="agentId != null and agentId != ''"> and agent_id = #{agentId} </if>
		  		  <if test="gmtCreate != null and gmtCreate != ''"> and gmt_create = #{gmtCreate} </if>
		  		  <if test="gmtModify != null and gmtModify != ''"> and gmt_modify = #{gmtModify} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.yukz.daodaoping.discount.domain.DiscountConfigDO" useGeneratedKeys="true" keyProperty="id">
		insert into ddp_discount_config
		(
			`discount_name`, 
			`start_time`, 
			`end_time`, 
			`discount_status`, 
			`agent_id`, 
			`gmt_create`, 
			`gmt_modify`
		)
		values
		(
			#{discountName}, 
			#{startTime}, 
			#{endTime}, 
			#{discountStatus}, 
			#{agentId}, 
			#{gmtCreate}, 
			#{gmtModify}
		)
	</insert>
	 
	<update id="update" parameterType="com.yukz.daodaoping.discount.domain.DiscountConfigDO">
		update ddp_discount_config 
		<set>
			<if test="discountName != null">`discount_name` = #{discountName}, </if>
			<if test="startTime != null">`start_time` = #{startTime}, </if>
			<if test="endTime != null">`end_time` = #{endTime}, </if>
			<if test="discountStatus != null">`discount_status` = #{discountStatus}, </if>
			<if test="agentId != null">`agent_id` = #{agentId}, </if>
			<if test="gmtCreate != null">`gmt_create` = #{gmtCreate}, </if>
			<if test="gmtModify != null">`gmt_modify` = #{gmtModify}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from ddp_discount_config where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from ddp_discount_config where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>