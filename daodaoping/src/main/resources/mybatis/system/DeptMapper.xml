<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yukz.daodaoping.system.dao.DeptDao">

	<select id="get" resultType="com.yukz.daodaoping.system.domain.DeptDO">
		select
		`dept_id`,`parent_id`,`name`,`order_num`,`del_flag`, agent_id as agentId, ext1, ext2, ext3 from sys_dept
		where dept_id = #{value}
	</select>

	<select id="list" resultType="com.yukz.daodaoping.system.domain.DeptDO">
		select `dept_id`,`parent_id`,`name`,`order_num`,`del_flag`, agent_id as agentId, ext1, ext2, ext3 from
		sys_dept
		<where>
			<if test="deptId != null and deptId != ''"> and dept_id = #{deptId} </if>
			<if test="deptIds != null and deptIds.size() > 0">and dept_id in
				<foreach collection="deptIds" item="item" index="index" separator="," open="(" close=")">
					#{item}
				</foreach>
			</if>
			<if test="parentId != null and parentId != ''"> and parent_id = #{parentId} </if>
			<if test="name != null and name != ''"> and name = #{name} </if>
			<if test="orderNum != null and orderNum != ''"> and order_num = #{orderNum} </if>
			<if test="delFlag != null and delFlag != ''"> and del_flag = #{delFlag} </if>
			<if test="agentId != null and agentId != ''"> and agent_id = #{agentId} </if>
			<if test="ext1 != null and ext1 != ''"> and ext1 = #{ext1} </if>
			<if test="ext2 != null and ext2 != ''"> and ext2 = #{ext2} </if>
			<if test="ext3 != null and ext3 != ''"> and ext3 = #{ext3} </if>
		</where>
		<choose>
			<when test="sort != null and sort.trim() != ''">
				order by ${sort} ${order}
			</when>
			<otherwise>
				order by dept_id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="count" resultType="int">
		select count(*) from sys_dept
		<where>
			<if test="deptId != null and deptId != ''"> and dept_id = #{deptId} </if>
			<if test="deptIds != null and deptIds.size() > 0">and dept_id in
				<foreach collection="deptIds" item="item" index="index" separator="," open="(" close=")">
					#{item}
				</foreach>
			</if>
			<if test="parentId != null and parentId != ''"> and parent_id = #{parentId} </if>
			<if test="name != null and name != ''"> and name = #{name} </if>
			<if test="orderNum != null and orderNum != ''"> and order_num = #{orderNum} </if>
			<if test="delFlag != null and delFlag != ''"> and del_flag = #{delFlag} </if>
			<if test="agentId != null and agentId != ''"> and agent_id = #{agentId} </if>
			<if test="ext1 != null and ext1 != ''"> and ext1 = #{ext1} </if>
			<if test="ext2 != null and ext2 != ''"> and ext2 = #{ext2} </if>
			<if test="ext3 != null and ext3 != ''"> and ext3 = #{ext3} </if>
		</where>
	</select>

	<insert id="save" parameterType="com.yukz.daodaoping.system.domain.DeptDO"
		useGeneratedKeys="true" keyProperty="deptId">
		insert into sys_dept
		(
		`parent_id`,
		`name`,
		`order_num`,
		`del_flag`,
		`agent_id`,
		`ext1`,
		`ext2`,
		`ext3`
		)
		values
		(
		#{parentId},
		#{name},
		#{orderNum},
		#{delFlag},
		#{agentId},
		#{ext1},
		#{ext2},
		#{ext3}
		)
	</insert>

	<update id="update" parameterType="com.yukz.daodaoping.system.domain.DeptDO">
		update sys_dept
		<set>
			<if test="parentId != null">`parent_id` = #{parentId}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="orderNum != null">`order_num` = #{orderNum}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag}</if>
			<if test="agentId != null">`agent_id` = #{agentId}</if>
			<if test="ext1 != null">`ext1` = #{ext1}</if>
			<if test="ext2 != null">`ext2` = #{ext2}</if>
			<if test="ext3 != null">`ext3` = #{ext3}</if>
		</set>
		where dept_id = #{deptId}
	</update>

	<delete id="remove">
		delete from sys_dept where dept_id = #{value}
	</delete>

	<delete id="batchRemove">
		delete from sys_dept where dept_id in
		<foreach item="deptId" collection="array" open="(" separator=","
			close=")">
			#{deptId}
		</foreach>
	</delete>
	
	<select id="listParentDept" resultType="long">
		select DISTINCT parent_id from sys_dept
	</select>

    <select id="getDeptUserNumber" resultType="int">
		select count(*) from sys_user where dept_id = #{value}
	</select>
</mapper>