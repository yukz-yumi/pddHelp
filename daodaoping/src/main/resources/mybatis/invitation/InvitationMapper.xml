<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yukz.daodaoping.invitation.dao.InvitationDao">

	<select id="get" resultType="com.yukz.daodaoping.invitation.domain.InvitationDO">
		select `id`,`user_id`,`open_id`,`indirect_user_id`,`direct_user_id`,`direct_openid`,`indirect_openid`,`direct_nick_name`,`indirect_nick_name`,`agent_id`,`gmt_create`,`gmt_modify` from ddp_invitation where id = #{value}
	</select>

	<select id="list" resultType="com.yukz.daodaoping.invitation.domain.InvitationDO">
		select `id`,`user_id`,`open_id`,`indirect_user_id`,`direct_user_id`,`direct_openid`,`indirect_openid`,`direct_nick_name`,`indirect_nick_name`,`agent_id`,`gmt_create`,`gmt_modify` from ddp_invitation
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="openId != null and openId != ''"> and open_id = #{openId} </if>
		  		  <if test="indirectUserId != null and indirectUserId != ''"> and indirect_user_id = #{indirectUserId} </if>
		  		  <if test="directUserId != null and directUserId != ''"> and direct_user_id = #{directUserId} </if>
		  		  <if test="directOpenid != null and directOpenid != ''"> and direct_openid = #{directOpenid} </if>
		  		  <if test="indirectOpenid != null and indirectOpenid != ''"> and indirect_openid = #{indirectOpenid} </if>
		  		  <if test="directNickName != null and directNickName != ''"> and direct_nick_name = #{directNickName} </if>
		  		  <if test="indirectNickName != null and indirectNickName != ''"> and indirect_nick_name = #{indirectNickName} </if>
		  		  <if test="agentId != null and agentId != ''"> and agent_id = #{agentId} </if>
		  		  <if test="gmtCreate != null and gmtCreate != ''"> and gmt_create = #{gmtCreate} </if>
		  		  <if test="gmtModify != null and gmtModify != ''"> and gmt_modify = #{gmtModify} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from ddp_invitation
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="openId != null and openId != ''"> and open_id = #{openId} </if>
		  		  <if test="indirectUserId != null and indirectUserId != ''"> and indirect_user_id = #{indirectUserId} </if>
		  		  <if test="directUserId != null and directUserId != ''"> and direct_user_id = #{directUserId} </if>
		  		  <if test="directOpenid != null and directOpenid != ''"> and direct_openid = #{directOpenid} </if>
		  		  <if test="indirectOpenid != null and indirectOpenid != ''"> and indirect_openid = #{indirectOpenid} </if>
		  		  <if test="directNickName != null and directNickName != ''"> and direct_nick_name = #{directNickName} </if>
		  		  <if test="indirectNickName != null and indirectNickName != ''"> and indirect_nick_name = #{indirectNickName} </if>
		  		  <if test="agentId != null and agentId != ''"> and agent_id = #{agentId} </if>
		  		  <if test="gmtCreate != null and gmtCreate != ''"> and gmt_create = #{gmtCreate} </if>
		  		  <if test="gmtModify != null and gmtModify != ''"> and gmt_modify = #{gmtModify} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.yukz.daodaoping.invitation.domain.InvitationDO" useGeneratedKeys="true" keyProperty="id">
		insert into ddp_invitation
		(
			`user_id`, 
			`open_id`, 
			`indirect_user_id`, 
			`direct_user_id`, 
			`direct_openid`, 
			`indirect_openid`, 
			`direct_nick_name`, 
			`indirect_nick_name`, 
			`agent_id`, 
			`gmt_create`, 
			`gmt_modify`
		)
		values
		(
			#{userId}, 
			#{openId}, 
			#{indirectUserId}, 
			#{directUserId}, 
			#{directOpenid}, 
			#{indirectOpenid}, 
			#{directNickName}, 
			#{indirectNickName}, 
			#{agentId}, 
			#{gmtCreate}, 
			#{gmtModify}
		)
	</insert>
	 
	<update id="update" parameterType="com.yukz.daodaoping.invitation.domain.InvitationDO">
		update ddp_invitation 
		<set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="openId != null">`open_id` = #{openId}, </if>
			<if test="indirectUserId != null">`indirect_user_id` = #{indirectUserId}, </if>
			<if test="directUserId != null">`direct_user_id` = #{directUserId}, </if>
			<if test="directOpenid != null">`direct_openid` = #{directOpenid}, </if>
			<if test="indirectOpenid != null">`indirect_openid` = #{indirectOpenid}, </if>
			<if test="directNickName != null">`direct_nick_name` = #{directNickName}, </if>
			<if test="indirectNickName != null">`indirect_nick_name` = #{indirectNickName}, </if>
			<if test="agentId != null">`agent_id` = #{agentId}, </if>
			<if test="gmtCreate != null">`gmt_create` = #{gmtCreate}, </if>
			<if test="gmtModify != null">`gmt_modify` = #{gmtModify}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from ddp_invitation where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from ddp_invitation where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>