<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yukz.daodaoping.attrcnf.dao.AccountAttrDao">

	<select id="get" resultType="com.yukz.daodaoping.attrcnf.domain.AccountAttrDO">
		select `id`,`ex_account_id`,`attr_key`,`attr_value`,`agent_id`,`gmt_create`,`gmt_modify` from ddp_account_attr where id = #{value}
	</select>

	<select id="list" resultType="com.yukz.daodaoping.attrcnf.domain.AccountAttrDO">
		select `id`,`ex_account_id`,`attr_key`,`attr_value`,`agent_id`,`gmt_create`,`gmt_modify` from ddp_account_attr
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="exAccountId != null and exAccountId != ''"> and ex_account_id = #{exAccountId} </if>
		  		  <if test="attrKey != null and attrKey != ''"> and attr_key = #{attrKey} </if>
		  		  <if test="attrValue != null and attrValue != ''"> and attr_value = #{attrValue} </if>
		  		  <if test="agentId != null and agentId != ''"> and agent_id = #{agentId} </if>
		  		  <if test="gmtCreate != null and gmtCreate != ''"> and gmt_create = #{gmtCreate} </if>
		  		  <if test="gmtModify != null and gmtModify != ''"> and gmt_modify = #{gmtModify} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from ddp_account_attr
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="exAccountId != null and exAccountId != ''"> and ex_account_id = #{exAccountId} </if>
		  		  <if test="attrKey != null and attrKey != ''"> and attr_key = #{attrKey} </if>
		  		  <if test="attrValue != null and attrValue != ''"> and attr_value = #{attrValue} </if>
		  		  <if test="agentId != null and agentId != ''"> and agent_id = #{agentId} </if>
		  		  <if test="gmtCreate != null and gmtCreate != ''"> and gmt_create = #{gmtCreate} </if>
		  		  <if test="gmtModify != null and gmtModify != ''"> and gmt_modify = #{gmtModify} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.yukz.daodaoping.attrcnf.domain.AccountAttrDO" useGeneratedKeys="true" keyProperty="id">
		insert into ddp_account_attr
		(
			`ex_account_id`, 
			`attr_key`, 
			`attr_value`, 
			`agent_id`, 
			`gmt_create`, 
			`gmt_modify`
		)
		values
		(
			#{exAccountId}, 
			#{attrKey}, 
			#{attrValue}, 
			#{agentId}, 
			#{gmtCreate}, 
			#{gmtModify}
		)
	</insert>
	 
	<update id="update" parameterType="com.yukz.daodaoping.attrcnf.domain.AccountAttrDO">
		update ddp_account_attr 
		<set>
			<if test="exAccountId != null">`ex_account_id` = #{exAccountId}, </if>
			<if test="attrKey != null">`attr_key` = #{attrKey}, </if>
			<if test="attrValue != null">`attr_value` = #{attrValue}, </if>
			<if test="agentId != null">`agent_id` = #{agentId}, </if>
			<if test="gmtCreate != null">`gmt_create` = #{gmtCreate}, </if>
			<if test="gmtModify != null">`gmt_modify` = #{gmtModify}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from ddp_account_attr where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from ddp_account_attr where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>