<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yukz.daodaoping.user.dao.UserInfoDao">

	<select id="get" resultType="com.yukz.daodaoping.user.domain.UserInfoDO">
		select `id`,`user_id`,`open_id`,`nick_name`,`head_img_url`,`scores`,`user_grade`,`mobile`,`user_status`,`agent_id`,`gmt_create`,`gmt_modify` from ddp_user_info where id = #{value}
	</select>

	<select id="list" resultType="com.yukz.daodaoping.user.domain.UserInfoDO">
		select `id`,`user_id`,`open_id`,`nick_name`,`head_img_url`,`scores`,`user_grade`,`mobile`,`user_status`,`agent_id`,`gmt_create`,`gmt_modify` from ddp_user_info
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="openId != null and openId != ''"> and open_id = #{openId} </if>
		  		  <if test="nickName != null and nickName != ''"> and nick_name = #{nickName} </if>
		  		  <if test="headImgUrl != null and headImgUrl != ''"> and head_img_url = #{headImgUrl} </if>
		  		  <if test="scores != null and scores != ''"> and scores = #{scores} </if>
		  		  <if test="userGrade != null and userGrade != ''"> and user_grade = #{userGrade} </if>
		  		  <if test="mobile != null and mobile != ''"> and mobile = #{mobile} </if>
		  		  <if test="userStatus != null and userStatus != ''"> and user_status = #{userStatus} </if>
		  		  <if test="agentId != null and agentId != ''"> and agent_id = #{agentId} </if>
		  		  <if test="gmtCreate != null and gmtCreate != ''"> and gmt_create = #{gmtCreate} </if>
		  		  <if test="gmtModify != null and gmtModify != ''"> and gmt_modify = #{gmtModify} </if>
				  <if test="queryWord != null and queryWord != ''">
					and (
					(nick_name like concat(concat('%',#{queryWord}),'%'))
					or (mobile like concat(concat('%',#{queryWord}),'%'))
					)
				  </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from ddp_user_info
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="openId != null and openId != ''"> and open_id = #{openId} </if>
		  		  <if test="nickName != null and nickName != ''"> and nick_name = #{nickName} </if>
		  		  <if test="headImgUrl != null and headImgUrl != ''"> and head_img_url = #{headImgUrl} </if>
		  		  <if test="scores != null and scores != ''"> and scores = #{scores} </if>
		  		  <if test="userGrade != null and userGrade != ''"> and user_grade = #{userGrade} </if>
		  		  <if test="mobile != null and mobile != ''"> and mobile = #{mobile} </if>
		  		  <if test="userStatus != null and userStatus != ''"> and user_status = #{userStatus} </if>
		  		  <if test="agentId != null and agentId != ''"> and agent_id = #{agentId} </if>
		  		  <if test="gmtCreate != null and gmtCreate != ''"> and gmt_create = #{gmtCreate} </if>
		  		  <if test="gmtModify != null and gmtModify != ''"> and gmt_modify = #{gmtModify} </if>
				  <if test="queryWord != null and queryWord != ''">
					  and (
					  (nick_name like concat(concat('%',#{queryWord}),'%'))
					  or (mobile like concat(concat('%',#{queryWord}),'%'))
					  )
				  </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.yukz.daodaoping.user.domain.UserInfoDO" useGeneratedKeys="true" keyProperty="id">
		insert into ddp_user_info
		(
			`user_id`, 
			`open_id`, 
			`nick_name`, 
			`head_img_url`, 
			`scores`, 
			`user_grade`, 
			`mobile`, 
			`user_status`, 
			`agent_id`, 
			`gmt_create`, 
			`gmt_modify`
		)
		values
		(
			#{userId}, 
			#{openId}, 
			#{nickName}, 
			#{headImgUrl}, 
			#{scores}, 
			#{userGrade}, 
			#{mobile}, 
			#{userStatus}, 
			#{agentId}, 
			#{gmtCreate}, 
			#{gmtModify}
		)
	</insert>
	 
	<update id="update" parameterType="com.yukz.daodaoping.user.domain.UserInfoDO">
		update ddp_user_info 
		<set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="openId != null">`open_id` = #{openId}, </if>
			<if test="nickName != null">`nick_name` = #{nickName}, </if>
			<if test="headImgUrl != null">`head_img_url` = #{headImgUrl}, </if>
			<if test="scores != null">`scores` = #{scores}, </if>
			<if test="userGrade != null">`user_grade` = #{userGrade}, </if>
			<if test="mobile != null">`mobile` = #{mobile}, </if>
			<if test="userStatus != null">`user_status` = #{userStatus}, </if>
			<if test="agentId != null">`agent_id` = #{agentId}, </if>
			<if test="gmtCreate != null">`gmt_create` = #{gmtCreate}, </if>
			<if test="gmtModify != null">`gmt_modify` = #{gmtModify}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from ddp_user_info where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from ddp_user_info where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>